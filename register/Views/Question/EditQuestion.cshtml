@model register.ViewModels.Questions.Edit
@{
    ViewData["Title"] = "EditQuestion";
}

<h1>EditQuestion</h1>

<form class="mt-3" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Question" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Question" class="form-control" />
            <span asp-validation-for="Question" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class=" text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">بروزرسانی</button>
            <a asp-action="ViewQuestions" class="btn btn-danger">انصراف</a>
        </div>
    </div>



</form>