@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div>
    <form asp-controller="Account" asp-action="Register" method="post" >
        <div asp-validation-summary="ModelOnly" ></div>

        <label asp-for="FirstName" style="margin-right:12px" class="float-right"></label>
        <div class=" col-md-3">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <label asp-for="LastName" style="margin-right:12px" class="float-right"></label>
        <div class=" col-md-3">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <label asp-for="UserName" style="margin-right:12px" class="float-right"></label>
        <div class=" col-md-3">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <label asp-for="Email" style="margin-right:12px" class="float-right"></label>
        <div class=" col-md-3">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <label asp-for="Password" style="margin-right:12px" class="float-right"></label>
        <div class=" col-md-3">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <label asp-for="ConfPassword" style="margin-right:12px" class="float-right"></label>
        <div class=" col-md-3">
            <input asp-for="ConfPassword" class="form-control" />
            <span asp-validation-for="ConfPassword" class="text-danger"></span>
        </div>


        <div class="form-group ml-3 mt-2">
            <button type="submit" class="btn btn-primary btn-success float-right mr-3">ثبت</button>
        </div>
    </form>
</div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
